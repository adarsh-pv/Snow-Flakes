<h2 class=" d-flex justify-content-center " style="color: rgb(9, 87, 9);" >Sales Report</h2>
<table id="example" class="display nowrap " style="width:100%">
        <thead style="background-color:#597d33;color:#ffffff;">
            <tr>
                <th>No.</th>
                <th>Date</th>
                <th>Name</th>
                <th>Product Name</th>
                <th>Quantiy</th>
                <th>Paymen method</th>
                <th>Total price </th>
                <th>Total revenue</th>

                
            </tr>
        </thead>
        <tbody>
           {{#each order}}
            <tr style="background-color:#59c84a;color:#ffffff;">
                <td>{{add @index 1}}</td>
                <td>{{format this.createdAt}}</td>
                <td>{{this.userId.name}}</td>

                <td>{{#each this.OrderItems}}{{this.productId.productname}} <br>{{/each}}<br></td>
                <td>{{#each this.OrderItems}}{{this.quantity}} <br>{{/each}}</td>
                <td>{{this.paymentdetails}}</td>
                {{#if this.grandtotal}}
                <td>{{this.grandtotal}}</td>
                {{else}}
                <td>{{this.totalprice}}</td>
                {{/if}}
                <td>{{../income}}</td>
            </tr>
          {{/each}}
        </tfoot>
    </table>
    
