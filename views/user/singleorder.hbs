<section class="h-100 gradient-custom container">
  <div class="container">
   
        <div class="card" style="border-radius: 10px;">
          
          <h5 style="color: green;">Yours snows!</h5>
           {{#if (eq orders.productstatus "pending")}}
          <div class="track">
                <div class="step active"> <span class="icon"> <i class="fa fa-check"></i> </span> <span class="text">Order confirmed</span> </div>
                <div class="step active"> <span class="icon"> <i class="fa fa-user"></i> </span> <span class="text"> Picked by courier</span> </div>
                <div class="step"> <span class="icon"> <i class="fa fa-truck"></i> </span> <span class="text"> On the way </span> </div>
                <div class="step"> <span class="icon"> <i class="fa fa-box"></i> </span> <span class="text">Ready for pickup</span> </div>
            </div>
            {{/if}}
             {{#if (eq orders.productstatus "shipped")}}
          <div class="track">
                <div class="step active"> <span class="icon"> <i class="fa fa-check"></i> </span> <span class="text">Order confirmed</span> </div>
                <div class="step active"> <span class="icon"> <i class="fa fa-user"></i> </span> <span class="text"> Picked by courier</span> </div>
                <div class="step active"> <span class="icon"> <i class="fa fa-truck"></i> </span> <span class="text"> On the way </span> </div>
                <div class="step"> <span class="icon"> <i class="fa fa-box"></i> </span> <span class="text">Ready for pickup</span> </div>
            </div>
            {{/if}}
            {{#if (eq orders.productstatus "delivered")}}
          <div class="track">
                <div class="step active"> <span class="icon"> <i class="fa fa-check"></i> </span> <span class="text">Order confirmed</span> </div>
                <div class="step active"> <span class="icon"> <i class="fa fa-user"></i> </span> <span class="text"> Picked by courier</span> </div>
                <div class="step active"> <span class="icon"> <i class="fa fa-truck"></i> </span> <span class="text"> On the way </span> </div>
                <div class="step active"> <span class="icon"> <i class="fa fa-box"></i> </span> <span class="text">Ready for pickup</span> </div>
            </div>
            {{/if}}
            {{#if (eq orders.productstatus "Cancelled")}}
          <div class="track">
                <div class="step"> <span class="icon"> <i class="fa fa-chart-bar"></i> </span> <span class="text">Order confirmed</span> </div>
                <div class="step"> <span class="icon"> <i class="fa fa-user"></i> </span> <span class="text"> Picked by courier</span> </div>
                <div class="step"> <span class="icon"> <i class="fa fa-truck"></i> </span> <span class="text"> On the way </span> </div>
                <div class="step"> <span class="icon"> <i class="fa fa-box"></i> </span> <span class="text">Ready for pickup</span> </div>
            </div>
            {{/if}}
{{#if (or (eq orders.productstatus "pending") (eq orders.productstatus "shipped"))}}
            
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              {{else}}
  {{/if}} 
            
            </div>
            
            <div class="card shadow-0 border mb-4">
                  {{#with orders}}
                  {{#each this.OrderItems}}

              <div class="card-body">
                <div class="row justify-content-between">

                  <div class="col-md-2">
                    <img  src="/{{this.productId.image.[0]}}"
                      class="img-fluid" alt="Phone">
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class=" mb-0">{{this.productId.productname}}</p>
                  </div>
                   
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class=" mb-0 small">{{this.quantity}} × {{this.productId.price}}</p>
                  </div>
                      
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class=" mb-0 small">{{../this.productstatus}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class=" mb-0 small">{{../this.deliveystatus}}</p>
                  </div>
                  
                      {{/each}}    
                 
                   {{/with}}
                </div>
                
              </div>
            </div>
      
                
            

            <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0"></p>
              <p class=" mb-0"><span class="fw-bold me-4">MRP price</span> ₹ {{orders.totalmrp}}</p>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class=" mb-0"></p>
              <p class=" mb-0"><span class="fw-bold me-4">Discount</span> ₹ {{orders.productdiscount}}</p>
            </div>
            {{#if orders.discount}}
            <div class="d-flex justify-content-between pt-2">
              <p class=" mb-0"></p>
              <p class=" mb-0"><span class="fw-bold me-4">Coupoon discount :</span> ₹ {{orders.discount}}</p>
            </div>
            {{else}}
            <div class="d-flex justify-content-between pt-2">
              <p class=" mb-0"></p>
              <p class=" mb-0"><span class="fw-bold me-4">Coupoon discount :</span></p>
            </div>
            {{/if}}

            <div class="d-flex justify-content-between">
              <p class=" mb-0"></p>
              <p class=" mb-0"><span class="fw-bold me-4">Total</span>₹<del> {{orders.totalmrp}}</del></p>
            </div>
             <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">Invoice date : {{format orders.createdAt}}</p>
              {{#if orders.grandtotal}}
              <p class=" mb-0"><span class="fw-bold me-4">Total</span> ₹ {{orders.grandtotal}}</p>
              {{else}}
              <p class=" mb-0"><span class="fw-bold me-4">Total</span> ₹ {{orders.totalprice}}</p>
{{/if}}
              
            </div> 
{{!-- <a type="button-success" href="/orderreciept/{{orders._id}}" class="btn btn">Invoice</a> --}}
<a type="button" href="/orderreciept/{{orders._id}}" class="btn btn-outline-success">Get Invoice</a>

           

            
          </div>
        
        </div>
      </div>
    </div>
  </div>
</section>
